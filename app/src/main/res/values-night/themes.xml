<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="EldenRingDeathCounter" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_2</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:itemBackground">@color/green_2</item>
        <item name="android:navigationBarColor">@color/green_2</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenuCustomStyle</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="OptionsMenuCustomStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@color/green_2</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_icon_foreground</item>
    </style>


</resources>